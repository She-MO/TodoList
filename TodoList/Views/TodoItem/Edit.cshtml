@model TodoList.ViewModels.TodoItemViewModel

<!DOCTYPE html>

<html>
<head>
    <title></title>
</head>
<body>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="TodoItem"  asp-antiforgery="true">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea type="text" asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeadlineDate" class="control-label"></label>
                <input type="text" asp-for="DeadlineDate" class="form-control" />
                <span asp-validation-for="DeadlineDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeadlineTime" class="control-label"></label>
                <input type="text" asp-for="DeadlineTime" class="form-control" />
                <span asp-validation-for="DeadlineTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save changes" class="btn btn-primary"/>
            </div>
        </form>
            <a asp-action="Index" asp-controller="Home">Back to List</a>
    </div>
</div>
</body>
</html>